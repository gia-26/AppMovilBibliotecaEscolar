<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6D7C8"
    tools:context=".Vista.VistaDetalleLibro">

    <ImageView
        android:id="@+id/imgLibroVD"
        android:layout_width="167dp"
        android:layout_height="276dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloLibroVD"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvTituloLibroVD"
        android:layout_width="357dp"
        android:layout_height="51dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="29dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#381D1D"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAutorVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="#381D1D"
        app:layout_constraintStart_toEndOf="@+id/imgLibroVD"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloLibroVD" />

    <TextView
        android:id="@+id/tvisbnVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="#381D1D"
        app:layout_constraintStart_toEndOf="@+id/imgLibroVD"
        app:layout_constraintTop_toBottomOf="@+id/tvAutorVD" />

    <TextView
        android:id="@+id/tvGeneroVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="#381D1D"
        app:layout_constraintStart_toEndOf="@+id/imgLibroVD"
        app:layout_constraintTop_toBottomOf="@+id/tvisbnVD" />

    <TextView
        android:id="@+id/tvEditorialVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="#381D1D"
        app:layout_constraintStart_toEndOf="@+id/imgLibroVD"
        app:layout_constraintTop_toBottomOf="@+id/tvGeneroVD" />

    <TextView
        android:id="@+id/tvAnioEdiVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="#381D1D"
        app:layout_constraintStart_toEndOf="@+id/imgLibroVD"
        app:layout_constraintTop_toBottomOf="@+id/tvEditorialVD" />

    <TextView
        android:id="@+id/tvNoEstanteVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="#381D1D"
        app:layout_constraintStart_toEndOf="@+id/imgLibroVD"
        app:layout_constraintTop_toBottomOf="@+id/tvAnioEdiVD" />

    <TextView
        android:id="@+id/tvEdicionVD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="TextView"
        android:textColor="#381D1D"
        app:layout_constraintStart_toEndOf="@+id/imgLibroVD"
        app:layout_constraintTop_toBottomOf="@+id/tvNoEstanteVD" />

    <TextView
        android:id="@+id/tvSinopsisVD"
        android:layout_width="370dp"
        android:layout_height="229dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="323dp"
        android:fontFamily="@font/roboto"
        android:text="Sinopsis"
        android:textColor="#381D1D"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgLibroVD" />

    <TextView
        android:id="@+id/tvEstadoVD"
        android:layout_width="366dp"
        android:layout_height="38dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="36dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#381D1D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSinopsisVD" />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="61dp"
        android:layout_height="56dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#381D1D"
        android:textSize="24sp"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconTint="#F0D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>